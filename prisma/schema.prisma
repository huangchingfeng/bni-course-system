// BNI 新北市西B區課程報名系統
// Prisma Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// 分會 (24個分會)
model Chapter {
  id          String   @id @default(cuid())
  name        String   @unique  // 華榮、華冠、華醫...
  displayName String             // 顯示名稱
  region      String   @default("新北市西B區")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members        Member[]
  managedBy      MemberChapter[]  // 哪些董事顧問/大使負責此分會

  @@index([name])
}

// 會員
model Member {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  phone       String?
  lineId      String?  @unique  // LINE 登入用
  avatarUrl   String?
  profession  String?            // 專業別（例：室內設計、保險、餐飲）

  // 所屬分會（自動匹配或手動輸入）
  chapterId   String?            // 如果匹配到現有分會則填入
  chapter     Chapter? @relation(fields: [chapterId], references: [id])
  chapterName String?            // 用戶輸入的分會名稱（備用）

  // 角色: MEMBER | CHAPTER_LEADER | ADMIN
  role        Role     @default(MEMBER)

  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  registrations   Registration[]
  accounts        Account[]
  sessions        Session[]
  managedChapters MemberChapter[]  // 董事顧問/大使負責的分會
  auditLogs       AuditLog[]       // 此會員執行的操作日誌

  @@index([chapterId])
  @@index([email])
}

enum Role {
  MEMBER               // 一般會員
  MENTOR_COORDINATOR   // 導師協調員（新增）
  EVENT_COORDINATOR    // 活動協調員（新增）
  CHAPTER_LEADER       // 分會幹部（保留）
  AMBASSADOR           // 大使
  DIRECTOR_CONSULTANT  // 董事顧問
  REGIONAL_DIRECTOR    // 區域董事
  EXECUTIVE_DIRECTOR   // 執行董事
  ADMIN                // 區域管理員
}

// 董事顧問/大使 負責的分會（多對多）
model MemberChapter {
  id        String   @id @default(cuid())
  memberId  String
  member    Member   @relation(fields: [memberId], references: [id], onDelete: Cascade)
  chapterId String
  chapter   Chapter  @relation(fields: [chapterId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([memberId, chapterId])
  @@index([memberId])
  @@index([chapterId])
}

// 課程類型
model CourseType {
  id              String   @id @default(cuid())
  code            String   @unique  // MSP, PT, LEADERSHIP
  name            String             // MSP 成功會員培訓初階
  description     String?
  longDescription String?  @db.Text   // 詳細課程介紹（自然段落）
  pricingInfo     String?              // 收費說明
  color           String?  @default("#3B82F6")  // 顯示用顏色

  courses     Course[]
}

// 課程
model Course {
  id          String     @id @default(cuid())
  title       String
  description String?    @db.Text
  bannerUrl   String?               // 課程橫幅圖片 URL

  // 課程類型
  typeId      String
  type        CourseType @relation(fields: [typeId], references: [id])

  // 時間地點
  date        DateTime
  startTime   String     // "09:00"
  endTime     String     // "17:00"
  location    String
  address     String?

  // 報名設定
  capacity    Int?       // 人數上限 (null = 無限制)
  deadline    DateTime?  // 報名截止日

  // 狀態
  status      CourseStatus @default(DRAFT)

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  registrations Registration[]

  @@index([date])
  @@index([typeId])
  @@index([status])
}

enum CourseStatus {
  DRAFT       // 草稿
  PUBLISHED   // 已發布
  CLOSED      // 已截止
  CANCELLED   // 已取消
}

// 報名紀錄
model Registration {
  id          String   @id @default(cuid())

  // 關聯
  memberId    String
  member      Member   @relation(fields: [memberId], references: [id])
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id])

  // 狀態
  status      RegistrationStatus @default(REGISTERED)

  // 備註
  note        String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([memberId, courseId])  // 一人一課程只能報名一次
  @@index([courseId])
  @@index([memberId])
}

enum RegistrationStatus {
  REGISTERED  // 已報名
  CANCELLED   // 已取消
  ATTENDED    // 已出席
  NO_SHOW     // 未出席
}

// NextAuth.js 相關表格
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user Member @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         Member   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// ============================================
// 操作日誌系統
// ============================================

// 操作日誌
model AuditLog {
  id          String      @id @default(cuid())
  userId      String                          // 操作者 ID
  userEmail   String                          // 操作者 Email（方便查詢）
  userName    String?                         // 操作者姓名
  action      AuditAction                     // 操作類型
  targetType  String                          // 目標類型 (Member, Course, Registration, etc.)
  targetId    String?                         // 目標 ID
  targetName  String?                         // 目標名稱（方便閱讀）
  changes     Json?                           // 變更內容（舊值 → 新值）
  metadata    Json?                           // 其他資訊（如 IP 位址）
  createdAt   DateTime    @default(now())

  user        Member      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([action])
  @@index([targetType])
  @@index([createdAt])
}

enum AuditAction {
  CREATE              // 新增
  UPDATE              // 更新
  DELETE              // 刪除
  LOGIN               // 登入
  LOGOUT              // 登出
  PERMISSION_CHANGE   // 權限變更
  REGISTRATION        // 報名
  CANCEL_REGISTRATION // 取消報名
}
