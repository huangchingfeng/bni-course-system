// BNI 新北市西B區課程報名系統
// Prisma Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// 分會 (24個分會)
model Chapter {
  id          String   @id @default(cuid())
  name        String   @unique  // 華榮、華冠、華醫...
  displayName String             // 顯示名稱
  region      String   @default("新北市西B區")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  members     Member[]

  @@index([name])
}

// 會員
model Member {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  phone       String?
  lineId      String?  @unique  // LINE 登入用
  avatarUrl   String?
  profession  String?            // 專業別（例：室內設計、保險、餐飲）

  // 所屬分會（自動匹配或手動輸入）
  chapterId   String?            // 如果匹配到現有分會則填入
  chapter     Chapter? @relation(fields: [chapterId], references: [id])
  chapterName String?            // 用戶輸入的分會名稱（備用）

  // 角色: MEMBER | CHAPTER_LEADER | ADMIN
  role        Role     @default(MEMBER)

  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  registrations Registration[]
  accounts      Account[]
  sessions      Session[]

  @@index([chapterId])
  @@index([email])
}

enum Role {
  MEMBER          // 一般會員
  CHAPTER_LEADER  // 分會幹部
  ADMIN           // 區域管理員
}

// 課程類型
model CourseType {
  id              String   @id @default(cuid())
  code            String   @unique  // MSP, PT, LEADERSHIP
  name            String             // MSP 成功會員培訓初階
  description     String?
  longDescription String?  @db.Text   // 詳細課程介紹（自然段落）
  pricingInfo     String?              // 收費說明
  color           String?  @default("#3B82F6")  // 顯示用顏色

  courses     Course[]
}

// 課程
model Course {
  id          String     @id @default(cuid())
  title       String
  description String?    @db.Text
  bannerUrl   String?               // 課程橫幅圖片 URL

  // 課程類型
  typeId      String
  type        CourseType @relation(fields: [typeId], references: [id])

  // 時間地點
  date        DateTime
  startTime   String     // "09:00"
  endTime     String     // "17:00"
  location    String
  address     String?

  // 報名設定
  capacity    Int?       // 人數上限 (null = 無限制)
  deadline    DateTime?  // 報名截止日

  // 狀態
  status      CourseStatus @default(DRAFT)

  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  registrations Registration[]

  @@index([date])
  @@index([typeId])
  @@index([status])
}

enum CourseStatus {
  DRAFT       // 草稿
  PUBLISHED   // 已發布
  CLOSED      // 已截止
  CANCELLED   // 已取消
}

// 報名紀錄
model Registration {
  id          String   @id @default(cuid())

  // 關聯
  memberId    String
  member      Member   @relation(fields: [memberId], references: [id])
  courseId    String
  course      Course   @relation(fields: [courseId], references: [id])

  // 狀態
  status      RegistrationStatus @default(REGISTERED)

  // 備註
  note        String?

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([memberId, courseId])  // 一人一課程只能報名一次
  @@index([courseId])
  @@index([memberId])
}

enum RegistrationStatus {
  REGISTERED  // 已報名
  CANCELLED   // 已取消
  ATTENDED    // 已出席
  NO_SHOW     // 未出席
}

// NextAuth.js 相關表格
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user Member @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         Member   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
